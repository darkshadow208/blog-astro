---
// src/layouts/PostLayout.astro
const { image, title, subtitle, author, date, category, readTime, children } = Astro.props;
const { content } = Astro.props;
import '../styles/globals.css';

const formatted = new Date(date).toLocaleDateString('es-CO', {
  year: 'numeric', month: 'long', day: 'numeric'
});
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} {subtitle ? `— ${subtitle}` : ''}</title>
  
  
  </head>

 <link rel="stylesheet" href="../styles/globals.css">
  <body class="post">
    <article class="post container">
      {image && <img class="post__cover" src={image} alt={`${title} ${subtitle ?? ''}`} />}
      <header class="post__head">
        <p class="post__cat">{category}</p>
        <h1 class="post__title">{title} <span class="post__subtitle">{subtitle}</span></h1>
        <p class="post__meta">Por {author} · {formatted} · {readTime}</p>
      </header>

{content
          ? <Fragment set:html={content} />
          : <slot />
        }    </article>
  </body>
</html>

