<section class="comment-form container">
  <h2 class="comment-form__title">Deja un comentario</h2>
  <form id="commentForm" class="comment-form__form" on:submit="handleSubmit(event)">
    <div class="form-group">
      <label for="author" class="form-label">Nombre <span aria-hidden="true">*</span></label>
      <input type="text" id="author" name="author" class="form-input" required placeholder="Tu nombre" />
    </div>
    <div class="form-group">
      <label for="email" class="form-label">Correo electrónico <span aria-hidden="true">*</span></label>
      <input type="email" id="email" name="email" class="form-input" required placeholder="tu@email.com" />
    </div>
    <div class="form-group">
      <label for="comment" class="form-label">Comentario <span aria-hidden="true">*</span></label>
      <textarea id="comment" name="comment" class="form-textarea" required placeholder="Escribe tu comentario aquí..." rows="5"></textarea>
    </div>
    <button type="submit" class="btn-submit">Enviar comentario</button>
    <p id="formMessage" class="form-message" role="alert" aria-live="polite"></p>
  </form>
</section>

<script>
  // JS puro para manejar el submit y validación simple
  function handleSubmit(event) {
    event.preventDefault();
    const form = event.target;
    const messageEl = form.querySelector('#formMessage');
    const author = form.author.value.trim();
    const email = form.email.value.trim();
    const comment = form.comment.value.trim();

    if (!author || !email || !comment) {
      messageEl.textContent = 'Por favor completa todos los campos.';
      messageEl.style.color = 'red';
      return;
    }

    // Aquí podrías agregar lógica para enviar el comentario a un backend o API

    messageEl.textContent = 'Gracias por tu comentario. Se enviará para revisión.';
    messageEl.style.color = 'green';

    form.reset();
  }
</script>

